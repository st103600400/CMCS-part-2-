<Window x:Class="CMCS.ClaimSubmission"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Submission" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Hours Worked:"/>
            <TextBox Name="HoursWorkedTextBox"/>

            <TextBlock Text="Hourly Rate:"/>
            <TextBox Name="HourlyRateTextBox"/>

            <TextBlock Text="Notes:"/>
            <TextBox Name="NotesTextBox" Height="60"/>

            <Button Content="Upload Document" Click="UploadButton_Click"/>
            <TextBlock Name="UploadedFileName" Text="No file selected" Margin="0,5,0,10"/>

            <Button Content="Submit" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
